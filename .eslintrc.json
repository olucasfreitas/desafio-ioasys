{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-unused-vars": "error",
    "no-empty-function": "warn",
    "no-var-requires": "warn",
    "naming-convention": [
      "warn",

      {
        "selector": "class",

        "format": ["PascalCase"]
      },

      {
        "selector": "interface",

        "format": ["PascalCase"]
      },

      {
        "selector": "enum",

        "format": ["PascalCase"]
      },

      {
        "selector": "variable",

        "modifiers": ["const"],

        "format": ["camelCase"]
      },

      {
        "selector": ["parameter", "function", "method", "property"],

        "format": ["camelCase"]
      },

      {
        "selector": ["function", "enum"],

        "modifiers": ["global"],

        "format": ["UPPER_CASE"]
      }
    ]
  }
}
